<odoo>
  <record id="view_import_summary_wizard_form" model="ir.ui.view">
    <field name="name">import.summary.wizard.form</field>
    <field name="model">import.summary.wizard</field>
    <field name="arch" type="xml">
      <form string="Import Summaries">
        <group>
          <field name="token" password="True" placeholder="Paste your API token"/>
        </group>
        <footer>
          <button name="action_import" string="Import" type="object" class="btn-primary"/>
          <button string="Cancel" class="btn-secondary" special="cancel"/>
        </footer>
      </form>
    </field>
  </record>
</odoo>
